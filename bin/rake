#!/usr/bin/env ruby

ENV['RACK_ENV'] ||= 'development'

require 'rubygems'
require 'bundler/setup'
File.foreach ".#{ENV['RACK_ENV']}.env" do |line|
  key, value = line.split "="
  ENV[key] = value.gsub('\n', '').strip
end

Bundler.require (ENV['RACK_ENV'] || ENV['RAILS_ENV'])

load Gem.bin_path('rake', 'rake')
