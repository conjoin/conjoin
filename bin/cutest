#!/usr/bin/env ruby

ENV['RACK_ENV'] = 'test'

File.foreach Dir.getwd + "/.test.env" do |line|
  key, value = line.split "="
  ENV[key] = value.gsub('\n', '').strip
end

require 'rubygems'
require 'bundler/setup'

require "cuba/test"
require 'awesome_print'
require 'pry'

load Gem.bin_path('cutest', 'cutest')
